$green = #3ea12b
.header
  background: $green
.inputField
  bottom: 0
  position : fixed
  z-index : 999
  width: 100%
  background: $green
  margin: 0
  input
    padding: 0.5em
    height: 3em
    line-height: 1.5
    border: 1px solid $green
    width: 60%

.chat-area
  height: 80%
  overflow-y: scroll

.message
  background: rgb(148, 211, 125)
  border-radius: 5px
  padding: 5px;
  margin: 5px;
  &.answer
    text-align: right
    background : rgb(125, 148, 211)

.msg-enter
  opacity: 0
  transition: opacity .2s ease-in
  &.msg-enter-active
    opacity: 1

.selective-input
  border-radius: 10px
  background: #c7c497
  border: 1px solid #e3bebe
  padding: 0
  li
    padding: 10px
    border-bottom: 1px dotted #ccc
    list-style-type:none
    &:hover,&:active
      background: #ccc;